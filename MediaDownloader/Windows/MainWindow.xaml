<w:BaseWindow
    x:Class="MediaDownloader.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:MediaDownloader.Data"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:MediaDownloader.Properties"
    xmlns:views="clr-namespace:MediaDownloader.Views"
    xmlns:w="clr-namespace:MediaDownloader.Windows"
    Width="850"
    Height="400"
    MinWidth="850"
    MinHeight="400"
    DataContext="{Binding RelativeSource={RelativeSource AncestorType=w:MainWindow}}"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True">
            <MenuItem Header="{x:Static p:Resources.HelpHeader}">
                <MenuItem Click="ShowAboutInfo" Header="{x:Static p:Resources.AboutHeader}" />
            </MenuItem>
        </Menu>

        <Grid Margin="25,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.ColumnSpan="5"
                Style="{StaticResource Heading}"
                Text="{x:Static p:Resources.AppName}" />

            <views:HintTextBox
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Hint="{x:Static p:Resources.URL}"
                Text="{Binding Download.Value.Url, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Grid.Row="1"
                Grid.Column="3"
                Click="StartDownload"
                Content="{x:Static p:Resources.Download}" />
            <Button
                Grid.Row="1"
                Grid.Column="4"
                Click="ShowDownloadsMenu"
                Style="{StaticResource IconButton}">
                <Image Source="{StaticResource DownloadIcon}" />
                <Button.ContextMenu>
                    <ContextMenu>
                        <ContextMenu.Template>
                            <ControlTemplate>
                                <views:DownloadsList />
                            </ControlTemplate>
                        </ContextMenu.Template>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            <Label
                Grid.Row="2"
                Content="{x:Static p:Resources.FormatLabel}"
                Style="{StaticResource GridLabel}" />
            <ComboBox
                Grid.Row="3"
                VerticalAlignment="Bottom"
                ItemsSource="{x:Static data:DownloadType.AllDownloadTypes}"
                SelectedItem="{Binding Download.Value.DownloadType.Value}"
                Style="{StaticResource LabeledComboBox}" />

            <Label
                Grid.Row="2"
                Grid.Column="1"
                Content="{x:Static p:Resources.VideoQualityLabel}">
                <Label.Style>
                    <Style BasedOn="{StaticResource GridLabel}" TargetType="Label">
                        <Setter Property="IsEnabled" Value="False" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Download.Value.DownloadType.Value}" Value="{x:Static data:DownloadType.Video}">
                                <Setter Property="IsEnabled" Value="True" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <ComboBox
                Grid.Row="3"
                Grid.Column="1"
                ItemsSource="{x:Static data:VideoQuality.AllQualities}"
                SelectedItem="{Binding Download.Value.VideoQuality.Value}">
                <ComboBox.Style>
                    <Style BasedOn="{StaticResource LabeledComboBox}" TargetType="ComboBox">
                        <Setter Property="IsEnabled" Value="False" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Download.Value.DownloadType.Value}" Value="{x:Static data:DownloadType.Video}">
                                <Setter Property="IsEnabled" Value="True" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>
